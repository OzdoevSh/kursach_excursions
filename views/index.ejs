                        <div class="slide bg-fix" style="background-image: url('https://www.tokkoro.com/picsup/1202565-moscow.jpg')">
                        </div>
            
                        <div class="slide bg-fix" style="background-image: url('https://w-dog.ru/wallpapers/0/65/322378056224567/noch-rossiya-moskva-svet-krasnaya-ploshhad.jpg')">
            
                        </div>
            
                        <div class="slide bg-fix" style="background-image: url('https://versiya.info/uploads/posts/2017-05/1495258620_1491716763_moscow-russia-red-square-imigo.jpg')">
            
                        </div>
                    </div>
                </div>
        



        <script>
            var flag = 0;
    
            console.log($('.slide').length); 
            
            function scrollToLeft() {
                if(flag!=1){
                        flag = 1;
                        let offset_left = $('.slider').scrollLeft();
                        offset_left = offset_left - $('.slider').width();
                        $('.slider').animate({
                            scrollLeft: offset_left
                        }, 500);
    
                        setTimeout(function(){
                            flag = 0;
                        },500);
                }
            }
    
            function scrollToRight() {
                if(flag!=1){
                    flag = 1;
                    let offset_left = $('.slider').scrollLeft();
                    offset_left = offset_left + $('.slider').width();
                    $('.slider').animate({
                        scrollLeft: offset_left
                    }, 500);
    
                    setTimeout(function(){
                        flag = 0;
                    },500);
                }
            }
    
    
            $('.buttonLeft').click(function(){
                scrollToLeft();
            });
    
            $('.buttonRight').click(function(){
               scrollToRight();
            });
    
            $('body').keydown(function(){
                if(event.keyCode == 37) {
                    scrollToLeft();
                }
    
                if(event.keyCode == 39) {
                    scrollToRight();
                }
            })
        </script>
